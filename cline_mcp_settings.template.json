{
  "mcpServers": {
    "mdundo_pg_anlytics": {
      "command": "${ASDF_DATA_DIR}/shims/uv",
      "args": [
        "--directory",
        "${PROJECT_PATH}/mcp-alchemy",
        "run",
        "-m",
        "mcp_alchemy"
      ],
      "env": {
        "PATH": "${ASDF_DATA_DIR}/shims:/usr/bin:/bin",
        "ASDF_DIR": "${ASDF_DIR}",
        "ASDF_DATA_DIR": "${ASDF_DATA_DIR}",
        "ASDF_UV_VERSION": "${UV_VERSION}",
        "CLAUDE_LOCAL_FILES_PATH": "${PROJECT_PATH}/local_files",
        "DB_URL": "${DB_URL}"
      },
      "disabled": false,
      "autoApprove": [
        "execute_query"
      ],
      "timeout": 900,
      "alwaysAllow": [
        "execute_query",
        "schema_definitions"
      ]
    },
    "markdownify-mcp": {
      "command": "${ASDF_DATA_DIR}/shims/node",
      "args": [
        "${PROJECT_PATH}/markdownify-mcp/dist/index.js"
      ],
      "env": {
        "PATH": "${ASDF_DATA_DIR}/shims:/usr/bin:/bin",
        "ASDF_DIR": "${ASDF_DIR}",
        "ASDF_DATA_DIR": "${ASDF_DATA_DIR}",
        "ASDF_NODEJS_VERSION": "${NODEJS_VERSION}"
      },
      "disabled": false,
      "autoApprove": []
    },
    "mcp-git-ingest": {
      "command": "${ASDF_DATA_DIR}/shims/uv",
      "args": [
        "--directory",
        "${PROJECT_PATH}/mcp-git-ingest",
        "run",
        "-m",
        "mcp_git_ingest"
      ],
      "env": {
        "PATH": "${ASDF_DATA_DIR}/shims:/usr/bin:/bin",
        "ASDF_DIR": "${ASDF_DIR}",
        "ASDF_DATA_DIR": "${ASDF_DATA_DIR}",
        "ASDF_UV_VERSION": "${UV_VERSION}"
      },
      "disabled": false,
      "autoApprove": [
        "git_directory_structure",
        "git_read_important_files"
      ]
    },
    "perplexity-server": {
      "command": "node",
      "args": [
        "${PROJECT_PATH}/perplexity-server/build/index.js"
      ],
      "env": {
        "PATH": "${ASDF_DATA_DIR}/shims:/usr/bin:/bin",
        "ASDF_DIR": "${ASDF_DIR}",
        "ASDF_DATA_DIR": "${ASDF_DATA_DIR}",
        "ASDF_NODEJS_VERSION": "${NODEJS_VERSION}",
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
      },
      "disabled": false,
      "autoApprove": [
        "search",
        "get_documentation",
        "find_apis",
        "check_deprecated_code",
        "chat_perplexity"
      ]
    },
    "tavily": {
      "command": "${PYENV_PATH}/python",
      "args": [
        "-m",
        "mcp_server_tavily"
      ],
      "env": {
        "TAVILY_API_KEY": "${TAVILY_API_KEY}"
      },
      "autoApprove": [
        "tavily_web_search",
        "tavily_answer_search",
        "tavily_news_search"
      ]
    },
    "@modelcontextprotocol-server-sequential-thinking": {
      "command": "${ASDF_DATA_DIR}/shims/npx",
      "env": {
        "PATH": "${ASDF_DATA_DIR}/shims:/usr/bin:/bin",
        "ASDF_DIR": "${ASDF_DIR}",
        "ASDF_DATA_DIR": "${ASDF_DATA_DIR}",
        "ASDF_NODEJS_VERSION": "${NODEJS_VERSION}"
      },
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "autoApprove": [
        "sequentialthinking"
      ]
    },
    "read-pdf": {
      "command": "${PYENV_PATH}/python",
      "args": [
        "-m",
        "mcp_server_pdf"
      ],
      "disabled": false,
      "autoApprove": [
        "process_pdf_file",
        "process_pdf_url"
      ]
    },
    "e2b": {
      "command": "${ASDF_DATA_DIR}/shims/node",
      "args": [
        "${PROJECT_PATH}/e2b-mcp/packages/js/build/index.js"
      ],
      "env": {
        "PATH": "${ASDF_DATA_DIR}/shims:/usr/bin:/bin",
        "ASDF_DIR": "${ASDF_DIR}",
        "ASDF_DATA_DIR": "${ASDF_DATA_DIR}",
        "ASDF_NODEJS_VERSION": "${NODEJS_VERSION}",
        "E2B_API_KEY": "${E2B_API_KEY}"
      },
      "disabled": false,
      "autoApprove": [
        "execute_code"
      ]
    },
    "pg_qhala_cema": {
      "command": "${ASDF_DATA_DIR}/shims/uv",
      "args": [
        "--directory",
        "${PROJECT_PATH}/mcp-alchemy",
        "run",
        "-m",
        "mcp_alchemy"
      ],
      "env": {
        "PATH": "${ASDF_DATA_DIR}/shims:/usr/bin:/bin",
        "ASDF_DIR": "${ASDF_DIR}",
        "ASDF_DATA_DIR": "${ASDF_DATA_DIR}",
        "ASDF_UV_VERSION": "${UV_VERSION}",
        "CLAUDE_LOCAL_FILES_PATH": "${PROJECT_PATH}/local_files",
        "DB_URL": "${CEMA_DB_URL}"
      },
      "disabled": false,
      "autoApprove": [
        "execute_query",
        "all_table_names",
        "schema_definitions"
      ],
      "timeout": 900
    }
  }
}
